{% extends 'base.html.twig' %}

{% block body %}
    <h1>Element</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ element.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ element.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ element.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ element.description }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ element.info }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if element.createdAt %}{{ element.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if element.updatedAt %}{{ element.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ element.format }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ element.rank }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('element_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('element_edit', { 'id': element.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
