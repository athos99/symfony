{% extends 'base.html.twig' %}

{% block body %}
    <h1>Element list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Title</th>
                <th>Description</th>
                <th>Info</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Format</th>
                <th>Rank</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td><a href="{{ path('element_show', { 'id': element.id }) }}">{{ element.id }}</a></td>
                <td>{{ element.name }}</td>
                <td>{{ element.title }}</td>
                <td>{{ element.description }}</td>
                <td>{{ element.info }}</td>
                <td>{% if element.createdAt %}{{ element.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if element.updatedAt %}{{ element.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ element.format }}</td>
                <td>{{ element.rank }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('element_show', { 'id': element.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('element_edit', { 'id': element.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('element_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
