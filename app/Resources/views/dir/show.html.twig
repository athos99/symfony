{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dir</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dir.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dir.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ dir.title }}</td>
            </tr>
            <tr>
                <th>Autopath</th>
                <td>{% if dir.autoPath %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ dir.description }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if dir.createdAt %}{{ dir.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if dir.updatedAt %}{{ dir.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Sortorder</th>
                <td>{{ dir.sortOrder }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dir_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('dir_edit', { 'id': dir.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
